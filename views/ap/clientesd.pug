mixin clientesd(title, id)
    .widget.col-md-12.col-sm-12.col-lg-6.col-xl-6.p-2
        div
            .head
                .filters
                    a(href="#")
                        h4.m-0= title
                    .text-end
                        .sem.green
                        img.close(src="/images/icon-btn-close.svg")
            .body 
                .row 
                    .col-lg-5.mx-auto.my-auto.text-center
                        div(style="height:200px;")
                            canvas(id=id, style="margin-top: 10px; position: relative;")
                    .col-lg-7.mx-auto.my-auto
                        div(id=id+"actual")
                .row 
                    p.updatetext.text-end(style="font-size:10px")